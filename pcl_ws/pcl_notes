
// find the frame_if of the velodyne
rostopic echo -n 1 /husky4/velodyne_points | grep frame_id


// install octomap
sudo apt-get install ros-melodic-octomap ros-melodic-octomap-mapping ros-melodic-octomap-msgs ros-melodic-octomap-ros ros-melodic-octomap-rviz-plugins ros-melodic-octomap-server

// clone latest octomap_mapping release into ws
https://github.com/OctoMap/octomap_mapping


// static transform between husky4/map (map) to /husky4velodyne_points (frame_id)
rosrun tf static_transform_publisher x y z yaw pitch roll map <point_cloud_frame_id> 10
rosrun tf static_transform_publisher 0.038 0 0.405 0.78278 -0.0049916 0 husky4/map husky4/velodyne 10

rosrun tf static_transform_publisher 0 0.147 0.165 1.57079 0 0 map husky4/map 10







// getting point clouds running
roscore

rosparam set use_sim_time true

rosbag play --pause main_lidar_locus-003.bag  --clock -r 5

rosrun rviz rviz

roslaunch octomap_server octomap_mapping.launch




// NDT & PCL notes
https://pcl.readthedocs.io/projects/tutorials/en/latest/normal_distributions_transform.html

// Install PCL (which containts NDT)
$ sudo apt install libpcl-dev